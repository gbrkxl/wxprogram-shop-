/* pages/index/index.wxss */
/* 轮播开始 */
.banner{
    width: 100%;
    height: 400rpx;
    position: relative;
}
.banner swiper{
    width: 100%;
    height: 400rpx;
}
.banner view{
    height: 40rpx;
    position: absolute;
    bottom: 0;
    right: 20rpx;
    color: #fff;
    font-size: 26rpx;
    line-height: 40rpx;
}
.banner swiper-item{
    width: 100%;
    height: 400rpx;
    position: relative;
}
.banner image{
    width: 100%;
    height: 400rpx;
}
.banner swiper-item view{
    width: 100%;
    height: 40rpx;
    background-color: rgba(0,0,0,.5);
    color: #fff;
    text-align: center;
    font-size: 26rpx;
    line-height: 40rpx;
    position: absolute;
    bottom: 0;
    left: 0;
}
/* 轮播结束 */
/* 每日一测开始 */
.oneday{
    /* width: 100%; */
    height: 280rpx;
    margin: 20rpx 30rpx;
    font-size: 28rpx;
    text-align: center;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
/* .oneday view{
    width: 100%;
    height: 100%;
} */
.oneday view image{
    width: 306rpx;
    height: 186rpx;
}
/* 每日一测结束 */
/* 内容开始 */
.list{
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #eee;
}
.list .title{
    font-size: 30rpx;
}
.list .content{
    display: flex;
}
.list .content image{
    width: 214rpx;
    height: 183rpx;
    margin-right: 30rpx;
}
.list .content .info{
    flex: 1;
    position: relative;
}
.list .content .info view{
    font-size: 24rpx;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
}
.list .content .info .readnum{
    position: absolute;
    bottom: 0;
    right: 0;
    font-size: 24rpx;
}
.list .content .info .readnum text{
    color: red;
    padding-right: 4rpx;
}
/* 内容结束 */