/* pages/cart/cart.wxss */
page{
    background-color: #f5f5f5;
}
.item{
    background-color: #fff;
    width: 100%;
    /* height: 100px; */
    display: flex;
    margin-bottom: 20rpx;
    overflow: hidden;
    transition: all 0.4s;
}
.show{
    transform: translateX(-180rpx);
    overflow: visible;
}
.content{
    width: 100%;
    margin-left: -180rpx;
    display: flex;
    transform: translateX(180rpx);
    transition: all 0.4s;
    padding: 20rpx 0;
}
.content .circle{
    text-align: center;
    padding: 60rpx 20rpx;
}
.content image{
    width: 180rpx;
    height: 180rpx;
    padding-right: 20rpx;
}
.content .info{
    flex: 1;
    position: relative;
}
.content .info-middle{
    font-size: 24rpx;
    color: #999;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
}
.content .info-bottom{
    position: absolute;
    bottom: 0;
}
.content .price{
    padding-right: 120rpx;
    font-size: 28rpx;
    color: red;
}
.content .num{
    padding: 0 20rpx;
}
.content .reduce,.add{
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    border: 1rpx solid #999;
    text-align: center;
    line-height: 40rpx;
}
.content .add{
    background-color: #000;
    color: #fff;
}
.delete{
    width: 180rpx;
    height: 180rpx;
    line-height: 180rpx;
    background-color: red;
    color: white;
    transform: translateX(180rpx);
    transition: all 0.4s;
    text-align: center;
    padding: 20rpx 0;
}
.around{
    width: 100%;
    height: 113rpx;
}

.account{
    position: fixed;
    bottom: 0;
    background-color: #fff;
    display: flex;
    width: 100%;
    /* padding: 30rpx 20rpx; */
    justify-content: space-between;
}
.circle{
    padding: 30rpx 20rpx;
}
.money{
    display: flex;
}
.sum{
    /* position: absolute; */
    padding: 30rpx 20rpx;
    /* right: 200rpx; */
}
.priceAll{
    /* position: absolute; */
    padding: 30rpx 20rpx;
    background-color: rgb(218, 7, 7);
}

