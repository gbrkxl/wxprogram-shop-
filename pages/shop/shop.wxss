/* pages/shop/shop.wxss */
@import '../../template/itemList/itemList.wxss';
page{
    background-color: #f5f5f5;
}
/* 导航开始 */
.nav{
    background-color: #fff;
    display: flex;
    height: 80rpx;
    align-items: center;
    font-size: 30rpx;
    padding: 0 20rpx;
}
.nav .citys{
    width: 80rpx;
    height: 100%;
    line-height: 80rpx;
    padding-right: 20rpx;
}
.nav .search{
    flex: 1;
    background-color: #f5f5f5;
    border-radius: 20rpx;
    padding-left: 20rpx;
}
.nav .search view{
    height: 50rpx;
    line-height: 50rpx;
    font-size: 26rpx;
}
/* 导航结束 */
/* 列表开始 */
.list{
    /* width: 100%; */
    /* height: 400rpx; */
    background-color: #fff;
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx;
    padding-top: 30rpx;
}
.item{
    width: 25%;
    text-align: center;
    font-size: 26rpx;
    padding-bottom: 20rpx;
}
.item image{
    width: 70rpx;
    height: 70rpx;
}
/* 列表结束 */
